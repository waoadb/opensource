{
  "name": "root",
  "private": true,
  "engines": {
    "node": ">=14.16.0 <=18.0.0"
  },
  "scripts": {
    "DEVELOPMENT": "##========================================##",
    "dev-theme": "lerna run dev-theme --parallel",
    "dev-packages": "lerna run dev --parallel",
    "build": "lerna run build --stream",
    "PRODUCTION": "##========================================##",
    "build:all": "yarn packages:build && lerna run build-theme --parallel",
    "build:themes-plugins": "cp .netlify/theme/theme.toml netlify.toml",
    "build:themes-default": "yarn build:themes-plugins && lerna run build-theme --scope=@waoadb/themes-default",
    "PACKAGES": "##========================================##",
    "packages:build": "lerna run build --scope='{@waoadb/js-client-sdk,@waoadb/js-admin-sdk,@waoadb/react-sdk}'",
    "packages:version": "lerna version --no-private",
    "packages:publish": "lerna publish --no-private"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2
  },
  "dependencies": {
    "@nrwl/nx-cloud": "^15.0.2"
  },
  "devDependencies": {
    "lerna": "^6.6.1",
    "npm-run-all": "^4.1.5",
    "nx": "^15.5.3",
    "run-sh": "^1.0.3"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  }
}
